<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageViewPole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pole"
        android:contentDescription="@string/pole_image_desc"
        android:scaleType="centerCrop"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation actuelle :"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvIpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address :"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvDnsServers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNS Servers :"
        android:padding="16dp" />
    <TextView
        android:id="@+id/tvAdditionalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texte supplÃ©mentaire en dur"
        android:padding="16dp" />

</LinearLayout>